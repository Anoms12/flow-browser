{
  "name": "flow-browser",
  "version": "1.0.0",
  "description": "A minimal browser shell built on Electron.",
  "private": true,
  "workspaces": [
    "./electron",
    "./vite"
  ],
  "scripts": {
    "start": "bun --cwd ./vite build && bun --cwd ./electron start",
    "build": "bun --cwd ./vite build && bun --cwd ./electron package",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "prettier": "^3.5.3"
  }
}
